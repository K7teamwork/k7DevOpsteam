[Unit]
Description=Gunicorn for Django App
After=network.target
Requires=network.target

[Service]
User=jenkins
Group=www-data
RuntimeDirectory=gunicorn
WorkingDirectory=/var/lib/jenkins/workspace/election-cicd/election
Environment="PATH=/var/lib/jenkins/workspace/election-cicd/venv/bin"
ExecStart=/var/lib/jenkins/workspace/election-cicd/venv/bin/gunicorn \
          --access-logfile - \
          --error-logfile /var/lib/jenkins/workspace/election-cicd/gunicorn-error.log \
          --workers 3 \
          --worker-class sync \
          --bind unix:/run/gunicorn.sock \
          election.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target